---
layout: default
---

<div class="post">
  <header class="post-header">
    <h1 class="post-title">
      {{ page.title }}
      {% if page.cv_pdf %}
        <a
          {% if page.cv_pdf contains '://' %}
            href="{{ page.cv_pdf }}"
          {% else %}
            href="{{ page.cv_pdf | relative_url }}"
          {% endif %}
          target="_blank"
          rel="noopener noreferrer"
          class="float-right"
          aria-label="Open CV PDF"
          title="Open CV PDF"
        >
          <i class="fa-solid fa-file-pdf"></i>
        </a>
      {% endif %}
    </h1>
  </header>

  <article>
    <!-- Single sentence (from cv.md body) -->
    <div class="clearfix">
      {{ content }}
    </div>

    <!-- Optional inline PDF viewer -->
    {% if page.cv_pdf and page.cv_embed != false %}
      <div class="mt-3">
        <object
          data="{% if page.cv_pdf contains '://' %}{{ page.cv_pdf }}{% else %}{{ page.cv_pdf | relative_url }}{% endif %}"
          type="application/pdf"
          width="100%"
          height="1000"
          style="border: 0;"
        >
          <p>
            Your browser canâ€™t display PDFs inline.
            <a
              {% if page.cv_pdf contains '://' %}
                href="{{ page.cv_pdf }}"
              {% else %}
                href="{{ page.cv_pdf | relative_url }}"
              {% endif %}
              target="_blank"
              rel="noopener noreferrer"
            >
              Click here to open the PDF.
            </a>
          </p>
        </object>
      </div>
    {% endif %}
  </article>
</div>
